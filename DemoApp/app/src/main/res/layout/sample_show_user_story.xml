<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/total_o"
    android:background="@drawable/bg_story"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="56dp"
        android:layout_height="56dp"

        android:padding="5dp"
        android:src="@drawable/avatar3"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <ImageButton
        android:id="@+id/online_offline"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/profile_image"
        android:layout_alignRight="@+id/profile_image"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"

        android:background="@drawable/check_online">

    </ImageButton>


    <TextView
        android:id="@+id/userNameList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:text="Rohan kumar"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/text_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="..hmmm"
        android:textSize="16sp"
        android:textStyle="normal" />



        <ImageView
            android:id="@+id/image_story"
            android:layout_below="@+id/text_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_text"

        android:layout_below="@+id/total_btn"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_show_like"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:gravity="center"

            android:text="0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_show_laugh"
            android:layout_width="30dp"
            android:gravity="center"
            android:layout_gravity="left"

            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="0"

            android:layout_weight="1" />
        <TextView
            android:id="@+id/txt_show_said"
            android:layout_width="30dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="0"

          />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_btn"
        android:layout_below="@+id/text_story"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:layout_weight="1"
            android:text="LIKE" />

        <ImageView
            android:id="@+id/btn_like_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_favorite_24_red"
            android:layout_weight="1"
            android:text="LIKE" />



        <ImageView
            android:id="@+id/btn_verylaugh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_sentiment_very_satisfied_24"
            android:layout_weight="1"
            android:text="LIKE" />

        <ImageView
            android:id="@+id/btn_verylaugh_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_sentiment_very_satisfied_24_red"
            android:layout_weight="1"
            android:text="LIKE" />

        <ImageView
            android:id="@+id/btn_verysaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_sentiment_very_dissatisfied_24"
            android:layout_weight="1"
            android:text="LIKE" />

        <ImageView
            android:id="@+id/btn_verysaid_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_sentiment_very_dissatisfied_24_red"
            android:layout_weight="1"
            android:text="LIKE" />


        <ImageView
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_chat_bubble_outline_24"
            android:text="Nháº¯n Tin" />
    </LinearLayout>





</RelativeLayout>